datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/.prisma/client"
}

model Comment {
  id                   String    @id @default(cuid())
  post                 Post?     @relation("Comment_post", fields: [postId], references: [id])
  postId               String?   @map("post")
  replyTo              Comment?  @relation("Comment_replyTo", fields: [replyToId], references: [id])
  replyToId            String?   @map("replyTo")
  content              String    @default("")
  user                 User?     @relation("Comment_user", fields: [userId], references: [id])
  userId               String?   @map("user")
  flaggedBy            User[]    @relation("Comment_flaggedBy")
  likedBy              User[]    @relation("Comment_likedBy")
  postedAt             DateTime? @default(now())
  editedAt             DateTime?
  hidden               Boolean   @default(false)
  from_Comment_replyTo Comment[] @relation("Comment_replyTo")

  @@index([postId])
  @@index([replyToId])
  @@index([userId])
}

model Metadata {
  id          Int    @id
  title       String @default("")
  tagline     String @default("")
  description String @default("")
  keywords    String @default("")
}

model Post {
  id            String    @id @default(cuid())
  title         String    @default("")
  slug          String    @default("")
  path          String    @default("")
  subtitle      String    @default("")
  description   String    @default("")
  content       Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  poster        Poster?   @relation("Post_poster", fields: [posterId], references: [id])
  posterId      String?   @map("poster")
  likes         User[]    @relation("Post_likes")
  comments      Comment[] @relation("Comment_post")
  allowComments Boolean   @default(false)
  tags          Tag[]     @relation("Post_tags")
  privacy       String    @default("Public")
  type          String    @default("users")
  postedAt      DateTime? @default(now())
  updatedAt     DateTime?

  @@index([title])
  @@index([slug])
  @@index([path])
  @@index([posterId])
}

model Image {
  id              String    @id @default(cuid())
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  altText         String    @default("")
  caption         String    @default("")
  uploader        Poster?   @relation("Image_uploader", fields: [uploaderId], references: [id])
  uploaderId      String?   @map("uploader")
  uploadedAt      DateTime? @default(now())

  @@index([uploaderId])
}

model Tag {
  id              String  @id @default(cuid())
  title           String  @default("")
  subtitle        String  @default("")
  keywords        String  @default("")
  slug            String  @default("")
  path            String  @default("")
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  description     String  @default("")
  posts           Post[]  @relation("Post_tags")

  @@index([title])
  @@index([slug])
  @@index([path])
}

model Poster {
  id               String  @id
  name             String  @unique @default("")
  slug             String  @default("")
  path             String  @default("")
  oneLiner         String  @default("")
  avatar_id        String?
  avatar_filesize  Int?
  avatar_width     Int?
  avatar_height    Int?
  avatar_extension String?
  posts            Post[]  @relation("Post_poster")
  images           Image[] @relation("Image_uploader")
  website          String  @default("")
  patreon          String  @default("")
  xTwitter         String  @default("")
  instagram        String  @default("")

  @@index([slug])
  @@index([path])
}

model User {
  id            String    @id
  name          String    @default("")
  email         String    @default("")
  updates       String    @default("periodically")
  tokens        Token[]   @relation("Token_user")
  liked         Post[]    @relation("Post_likes")
  comments      Comment[] @relation("Comment_user")
  likedComments Comment[] @relation("Comment_likedBy")
  flags         Comment[] @relation("Comment_flaggedBy")

  @@index([name])
}

model Token {
  id           String   @id
  manager      Boolean  @default(false)
  community    Boolean  @default(false)
  poster       Boolean  @default(false)
  access       String   @default("")
  refresh      String   @default("")
  accessExpiry DateTime
  expiry       DateTime
  user         User?    @relation("Token_user", fields: [userId], references: [id])
  userId       String?  @map("user")

  @@index([userId])
}
